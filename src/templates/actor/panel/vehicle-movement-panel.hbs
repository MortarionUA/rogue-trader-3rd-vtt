<div class="rt-panel spacer rt-grid-col-2">
    <h1 class="rt-panel__header">Movement</h1>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Size</span>
        <select class="rt-field__input" name="system.size">
            {{selectOptions rt.bio.size selected=actor.size}}
        </select>
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Cruising Speed</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.speed.cruising" value="{{actor.system.speed.cruising}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Tactical Speed</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.speed.tactical" value="{{actor.system.speed.tactical}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Manoeuverability</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.manoeuverability" value="{{actor.system.manoeuverability}}" />
    </div>
</div>

<div class="rt-panel rt-grid-col-6">
    <h1 class="rt-panel__header">Weapons</h1>
    <div class="rt-table--border rt-shipweaponsslotstable--border">
        <div class="table-row--head">
            <div class="table-cell" style="text-align: center !important;">Dorsal</div>
            <div class="table-cell">Prow</div>
            <div class="table-cell">Port</div>
            <div class="table-cell">Starboard</div>
            <div class="table-cell">Keel</div>
            <div class="table-cell">Special</div>
        </div>
        <div class="table-row">
            <div class="table-cell" style="text-align: center !important;">
                <input type="text" data-dtype="Text" class="rt-field__input" name="system.weaponSlots.dorsal" value="{{actor.system.weaponSlots.dorsal}}" />
            </div>
            <div class="table-cell">
                <input type="text" data-dtype="Text" class="rt-field__input" name="system.weaponSlots.prow" value="{{actor.system.weaponSlots.prow}}" />
            </div>
            <div class="table-cell">
                <input type="text" data-dtype="Text" class="rt-field__input" name="system.weaponSlots.port" value="{{actor.system.weaponSlots.port}}" />
            </div>
            <div class="table-cell">
                <input type="text" data-dtype="Text" class="rt-field__input" name="system.weaponSlots.starboard" value="{{actor.system.weaponSlots.starboard}}" />
            </div>
            <div class="table-cell">
                <input type="text" data-dtype="Text" class="rt-field__input" name="system.weaponSlots.keel" value="{{actor.system.weaponSlots.keel}}" />
            </div>
            <div class="table-cell">
                <input type="text" data-dtype="Text" class="rt-field__input" name="system.weaponSlots.special" value="{{actor.system.weaponSlots.special}}" />
            </div>
        </div>
    </div>
</div>

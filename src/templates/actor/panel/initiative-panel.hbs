<div class="rt-panel spacer rt-grid-col-2 rt-grid-row-1">
    <h1 class="rt-panel__header">Initiative</h1>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Base</span>
        <input type="text" class="rt-field__input" name="system.initiative.base" value="{{actor.initiative.base}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Characteristic</span>
        <select class="rt-field__input" name="system.initiative.characteristic">
            {{selectOptions rt.combat.characteristics selected=actor.initiative.characteristic}}
        </select>
    </div>
</div>

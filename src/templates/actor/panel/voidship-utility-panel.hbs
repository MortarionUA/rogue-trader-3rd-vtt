<div class="rt-panel spacer rt-grid-col-2">
    <h1 class="rt-panel__header">Utility</h1>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Space Limit</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.space.max" value="{{actor.space.max}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Space Used</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.space.value" value="{{actor.space.value}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Power Limit</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.power.max" value="{{actor.power.max}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Power Used</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.power.value" value="{{actor.power.value}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Hull Integrity</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.hull.max" value="{{actor.hull.max}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Hull Left</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.hull.value" value="{{actor.hull.value}}" />
    </div>
</div>

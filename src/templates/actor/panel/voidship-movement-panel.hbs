<div class="rt-panel spacer rt-grid-col-2">
    <h1 class="rt-panel__header">Movement</h1>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Speed</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.speed" value="{{actor.speed}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Turn Radius</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.turnRadius" value="{{actor.turnRadius}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Maneuverability</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.maneuverability" value="{{actor.maneuverability}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Helm Operator</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.operator.helm" value="{{actor.operator.helm}}" />
    </div>
</div>

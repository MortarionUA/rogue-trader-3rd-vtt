<div class="rt-panel spacer rt-grid-col-2">
    <h1 class="rt-panel__header"><button type="roll-header" class='combat-control' data-action='crew'>Crew</button></h1>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Crew Rating</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.crewRating" value="{{actor.system.crewRating}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Crew Limit</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.crew.max" value="{{actor.system.crew.max}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Crew Left</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.crew.value" value="{{actor.system.crew.value}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Morale Limit</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.morale.max" value="{{actor.system.morale.max}}" />
    </div>
    <div class="rt-field__wrapper">
        <span class="rt-field__header">Morale Left</span>
        <input type="number" data-dtype="Number" class="rt-field__input" name="system.morale.value" value="{{actor.system.morale.value}}" />
    </div>
</div>

<div class="rt-panel rt-grid-col-2 rt-grid-row-3">
    <div class="rt-armour__wrapper">
        <h1 class="rt-panel__header">Armour Points</h1>
        <div class="rt-armour__row">
            <div class="rt-armour__block--head">
                <div class="rt-armour__roll">
                    01-10
                </div>
                <span class="rt-armour__display">{{actor.armour.head.total}}</span>
                <div class="rt-armour__location">Head</div>
            </div>
            <div class="rt-armour__block--leftarm">
                <div class="rt-armour__roll">
                    21-30
                </div>
                <span class="rt-armour__display">{{actor.armour.leftArm.total}}</span>
                <div class="rt-armour__location">Left Arm</div>
            </div>
        </div>
        <div class="rt-armour__row">
            <div class="rt-armour__block--rightarm">
                <div class="rt-armour__roll">
                    11-20
                </div>
                <span class="rt-armour__display">{{actor.armour.rightArm.total}}</span>
                <div class="rt-armour__location">Right Arm</div>
            </div>
            <div class="rt-armour__block--body">
                <div class="rt-armour__roll">
                    31-70
                </div>
                <span class="rt-armour__display">{{actor.armour.body.total}}</span>
                <div class="rt-armour__location">Body</div>
            </div>
        </div>
        <div class="rt-armour__row">
            <div class="rt-armour__block--rightleg">
                <div class="rt-armour__roll">
                    71-85
                </div>
                <span class="rt-armour__display">{{actor.armour.rightLeg.total}}</span>
                <div class="rt-armour__location">Right Leg</div>
            </div>
            <div class="rt-armour__block--leftleg">
                <div class="rt-armour__roll">
                    86-100
                </div>
                <span class="rt-armour__display">{{actor.armour.leftLeg.total}}</span>
                <div class="rt-armour__location">Left Leg</div>
            </div>
        </div>
        <div class="rt-armour__row">
            <div class="rt-armour__block--toughness">
                <div class="rt-armour__roll"></div>
                <span class="rt-armour__display">{{actor.characteristics.toughness.bonus}}</span>
                <div class="rt-armour__location">TB</div>
            </div>
            <div class="rt-armour__block--trait">
                <div class="rt-armour__roll"></div>
                <span class="rt-armour__display">{{actor.armour.head.traitBonus}}</span>
                <div class="rt-armour__location">Traits</div>
            </div>
        </div>
    </div>
</div>

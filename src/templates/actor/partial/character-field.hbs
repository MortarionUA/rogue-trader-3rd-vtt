<div class="rt-header__item-wrapper--{{cleanFieldName key}}">
    <span class="rt-header__title">{{capitalize key}}</span>
    {{#if options}}
        <select class="rt-header__select acolyte-{{key}}" name="system.bio.{{key}}">
            <option value=""></option>
            {{selectOptions (arrayToObject options) selected=this.value}}
        </select>
    {{else}}
        <input class="rt-header__input" name="system.bio.{{key}}" type="text" value="{{this.value}}" />
    {{/if}}
</div>

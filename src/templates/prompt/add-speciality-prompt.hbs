{{rtlog this}}
<div class="dialog-content">
    <form class="rt-wrapper" autocomplete="off">
        <div class="rt-attack">
            <!-- Header -->
            <div class="rt-panel rt-grid-col-6">
                <div class="rt-header">
                    <div class="rt-header__prompt rt-header__logo">
                        <div class="rt-header__item-wrapper--span-4 rt-header__borderless">
                            <img class="rt-header__logo-image-small" alt="{{this.actor.name}}" src="{{this.actor.img}}" />
                            <span class="rt-header__title">Create Speciality</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="rt-panel rt-grid-col-6">
                <div class="rt-field__wrapper">
                    <span class="rt-field__span">Skill</span>
                    <span class="rt-field__span">{{this.skill.label}}</span>
                </div>
                <div class="rt-field__wrapper">
                    <span class="rt-field__span">Speciality</span>
                    <input class="rt-field__input" type="text" id="speciality-name" />
                </div>
            </div>
        </div>
    </form>
</div>

{{dhlog this}}
<div class="dialog-content">
    <form class="rt-wrapper" autocomplete="off">
        <div class="rt-attack">
            <!-- Header -->
            <div class="rt-panel rt-grid-col-6">
                <div class="rt-header">
                    <div class="rt-header__prompt rt-header__logo">
                        <div class="rt-header__item-wrapper--span-4 rt-header__borderless">
                            <img class="rt-header__logo-image-small" alt="{{this.actor.name}}" src="{{this.actor.img}}" />
                            <span class="rt-header__title">Force Field</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="rt-panel rt-grid-col-6">
                <div class="rt-field__wrapper">
                    <span class="rt-field__span">Character</span>
                    <span class="rt-field__span">{{this.actor.name}}</span>
                </div>
                <div class="rt-field__wrapper">
                    <span class="rt-field__span">Force Field</span>
                    <span class="rt-field__span">{{this.forceField.name}}</span>
                </div>
                <div class="rt-field__wrapper">
                    <span class="rt-field__span">Quality</span>
                    <span class="rt-field__span">{{this.forceField.system.protectionRating}}</span>
                </div>
                <div class="rt-field__wrapper">
                    <span class="rt-field__span">Activated</span>
                    <span class="rt-field__span">{{this.forceField.system.activated}}</span>
                </div>
                <div class="rt-field__wrapper">
                    <span class="rt-field__span">Overloaded</span>
                    <span class="rt-field__span">{{this.forceField.system.overloaded}}</span>
                </div>
            </div>

            <div class="rt-panel rt-grid-col-6">
                <div class="rt-header">
                    <div class="rt-header__info">
                        <div class="rt-header__item-wrapper--span-4 rt-header__borderless">
                            <span class="rt-header__subtitle">Protection</span>
                        </div>
                    </div>
                </div>

                <div class="rt-field__wrapper">
                    <span class="rt-field__span">Rating</span>
                    <input class="rt-field__input" type="number" data-dtype="Number" name="protectionRating" value="{{this.protectionRating}}" />
                </div>
                <div class="rt-field__wrapper">
                    <span class="rt-field__span">Overload</span>
                    <input class="rt-field__input" type="number" data-dtype="Number" name="overloadRating" value="{{this.overloadRating}}" />
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Buttons -->
<div class="dialog-buttons">
    <button class="dialog-button roll default" data-button="roll" id="roll-force-field">
        <i class="rt-material">casino</i>
        Roll
    </button>
    <button class="dialog-button cancel" data-button="cancel" id="cancel-prompt">
        <i class="rt-material">close</i>
        Cancel
    </button>
</div>

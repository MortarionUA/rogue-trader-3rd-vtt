<div class="rt-wrapper">
    <div class="rt-chat">
        <div class="rt-roll">
            <h1>{{actor.name}}</h1>
            <h2>On Fire!</h2>
            <div class="rt-roll__divider"></div>

            <div class="rt-roll__row rt-roll__row--number">
                <div class="rt-roll__label">Energy Damage</div>
                <div class="rt-roll__value">{{damage}}</div>
            </div>
            <div class="rt-roll__row rt-roll__row--number">
                <div class="rt-roll__label">Fatigue</div>
                <div class="rt-roll__value">1</div>
            </div>

            <div class="rt-roll__label">On Fire damage ignores Armour.</div>

            {{#if success}}
                <div class="rt-roll__success">
                    <span>WP Success</span>
                    <span>{{roll.total}}</span>
                </div>
                <div class="rt-roll__label">You make take actions as normal.</div>
            {{else}}
                <div class="rt-roll__fail">
                    <span>WP Fail</span>
                    <span>{{roll.total}}</span>
                </div>
                <div class="rt-roll__label">You can only flail in agony and scream.</div>
            {{/if}}

            <div class='rt-roll__controls-1'>
                <div class="rt-control-button roll-control__apply-damage"
                     data-type="Energy"
                     data-ignore-armour="true"
                     data-uuid="{{actor.uuid}}"
                     data-damage="{{damage}}"
                     data-fatigue="1">
                    <span class="rt-control-button__span material-icons">api</span>
                    <span class="rt-control-button__label">Apply Damage</span>
                </div>
            </div>
        </div>
    </div>
</div>
